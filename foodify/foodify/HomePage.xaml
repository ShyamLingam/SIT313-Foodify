<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="foodify.HomePage"
             Title="Home" Icon="list.png">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="FillAndExpand">
            <Label x:Name="lbnlRoutine" Text="Select your Food" Font="30" TextColor="Green" HorizontalTextAlignment="Center" />
  
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
            <ListView x:Name="WorkoutListView" HasUnevenRows="true"  >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout VerticalOptions="Start" HorizontalOptions="Start">
                                <Grid BackgroundColor="White">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="150" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                     
                                    </Grid.ColumnDefinitions>
              <!--                      <Switch IsToggled="{Binding IsToggled}" Toggled="Handle_Toggled" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="0" Grid.Column="1" />
                                     <Label Text="Favourite" HorizontalTextAlignment="End" Font="20" Margin="5" Grid.Row="1" Grid.Column="1" TextColor="Green"  />-->
                                    <Image Source="{Binding Image}" Grid.Row="0" Grid.Column="0"  Aspect="AspectFill"/>
                                    <Label Text="{Binding Recipe}" Font="20" Margin="5" Grid.Row="1" Grid.Column="0"  TextColor="Orange" FontSize="Large" FontAttributes="Bold"/>
                                    <Label Text="{Binding Ingredients}" Margin="5" Grid.Row="2" Grid.Column="0" TextColor="Gray"   VerticalOptions="FillAndExpand"/>
                                    <Label Text="{Binding Instructions}" Margin="5" Grid.Row="3" Grid.Column="0"  VerticalOptions="FillAndExpand"/>
                                    <BoxView HeightRequest="1" Margin="5" BackgroundColor="Gray" Grid.Row="4" Grid.Column="0"  VerticalOptions="FillAndExpand"/>
                                </Grid>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
